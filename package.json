{
  "name": "tmc-file-transfer",
  "description": "Zero-vulnerability file transfer with 100% Cloudflare-native architecture",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc && vite build",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "deploy:waf": "node scripts/deploy-waf.js",
    "deploy:cleanup": "cd CleanupWorker && npm run deploy",
    "deploy:cleanup:preview": "cd CleanupWorker && npm run deploy:preview",
    "deploy:full": "npm run build && wrangler pages deploy dist && npm run deploy:waf && npm run deploy:cleanup"
  },
  "dependencies": {
    "@material/web": "^2.3.0",
    "@tailwindcss/typography": "^0.5.13",
    "vite-plugin-mkcert": "^1.17.5",
    "vue": "^3.4.32",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240821.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3",
    "vite": "^7.1.3",
    "vue-tsc": "^2.0.26",
    "wrangler": "^4.31.0"
  }
}
