{
  "name": "tmc-file-transfer",
  "description": "Zero-vulnerability file transfer with 100% Cloudflare-native architecture",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc --noEmit && tsc -p tsconfig.worker.json --noEmit && vite build",
    "typecheck": "vue-tsc --noEmit && tsc -p tsconfig.worker.json --noEmit",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist && npm run deploy:waf && npm run deploy:cleanup && npm run migrate:production",
    "deploy:pages": "npm run build && wrangler pages deploy dist",
    "deploy:waf": "node scripts/deploy-waf.js",
    "deploy:cleanup": "cd CleanupWorker && npm run deploy",
    "deploy:cleanup:preview": "cd CleanupWorker && npm run deploy:preview",
    "migrate:production": "node scripts/migrate-db.js production",
    "migrate:preview": "node scripts/migrate-db.js preview"
  },
  "dependencies": {
    "@material/web": "^2.3.0",
    "vite-plugin-mkcert": "^1.17.5",
    "vue": "^3.4.32",
    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240821.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "typescript": "^5.5.3",
    "vite": "^7.1.3",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.31.0"
  }
}
